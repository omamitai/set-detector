# Application mode
FLASK_ENV=production
DEBUG=False

# Worker configuration
MAX_WORKERS=3
MAX_SESSIONS=30
SESSION_TTL=600
CLEANUP_INTERVAL=120
MAX_MEMORY_PERCENT=80

# Resource limits for Railway
MEMORY_LIMIT_MB=1536

# CORS settings (update this after deployment with your frontend URL)
ALLOWED_ORIGINS=*

# Models directory (should match Dockerfile)
MODELS_DIR=/app/models
