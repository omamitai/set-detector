# Backend configuration
FLASK_ENV=production
ALLOWED_ORIGINS=http://51.20.254.19,https://51.20.254.19
MAX_WORKERS=3
MAX_SESSIONS=20
SESSION_TTL=300
CLEANUP_INTERVAL=60
MAX_MEMORY_PERCENT=80

# Frontend configuration
REACT_APP_API_URL=http://51.20.254.19
REACT_APP_API_ENDPOINT=/api
FRONTEND_PORT=80

# SSL/TLS Configuration
# Set to "true" to enable HTTPS, "false" to use HTTP only
USE_HTTPS=false
# Only used if USE_HTTPS=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Resource limits
CPU_LIMIT=2.0
MEMORY_LIMIT=3g
FRONTEND_CPU_LIMIT=0.5
FRONTEND_MEMORY_LIMIT=512m
